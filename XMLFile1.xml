<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YourAppNamespace.WelcomePage"
             BackgroundColor="#061437"
             NavigationPage.HasNavigationBar="False">

	<StackLayout VerticalOptions="FillAndExpand"
                 Padding="20"
                 Spacing="30">

		<!-- Car Image -->
		<Image Source="cadillac.png"
               Aspect="AspectFit"
               HeightRequest="300"
               HorizontalOptions="Center"/>

		<!-- Text Section -->
		<StackLayout VerticalOptions="EndAndExpand" Spacing="10">
			<Label Text="Premium cars,\nenjoy the luxury"
                   TextColor="White"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"/>

			<Label Text="Premium and prestige car daily\nand monthly rental. Experience\nthe thrill at a lower price."
                   TextColor="#BCC4D4"
                   FontSize="14"
                   HorizontalTextAlignment="Center"/>
		</StackLayout>

		<!-- Button -->
		<Button Text="Let’s Go"
                TextColor="#061437"
                BackgroundColor="#F9F6E5"
                FontAttributes="Bold"
                CornerRadius="20"
                HeightRequest="50"
                Clicked="OnLetsGoClicked"/>
	</StackLayout>
</ContentPage>
