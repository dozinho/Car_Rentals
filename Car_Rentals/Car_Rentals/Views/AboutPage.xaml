<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Car_Rentals.Views.AboutPage"
             Title="About">

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">
            <!-- Header -->
            <StackLayout HorizontalOptions="Center" Spacing="15">
                <Label Text="🚗" FontSize="80" HorizontalOptions="Center"/>
                <Label Text="Car Rentals" FontSize="32" FontAttributes="Bold" HorizontalOptions="Center"/>
                <Label Text="Your trusted car rental partner" FontSize="16" TextColor="Gray" HorizontalOptions="Center"/>
            </StackLayout>

            <!-- App Information -->
            <Frame Style="{StaticResource CardFrame}">
                <StackLayout Spacing="15">
                    <Label Text="About This App" FontSize="20" FontAttributes="Bold"/>
                    <Label Text="Car Rentals is a comprehensive mobile application that allows users to browse, search, and rent vehicles from our extensive fleet. Built with Xamarin.Forms, this app provides a seamless cross-platform experience for both iOS and Android users." 
                           TextColor="Gray" LineBreakMode="WordWrap"/>
                    
                    <Label Text="Features:" FontSize="16" FontAttributes="Bold" Margin="0,10,0,0"/>
                    <StackLayout Spacing="5">
                        <Label Text="• Browse available cars by category" TextColor="Gray"/>
                        <Label Text="• Search and filter vehicles" TextColor="Gray"/>
                        <Label Text="• View detailed car specifications" TextColor="Gray"/>
                        <Label Text="• Secure user authentication" TextColor="Gray"/>
                        <Label Text="• Easy booking process" TextColor="Gray"/>
                        <Label Text="• Rental history tracking" TextColor="Gray"/>
                    </StackLayout>
                </StackLayout>
            </Frame>

            <!-- Company Information -->
            <Frame Style="{StaticResource CardFrame}">
                <StackLayout Spacing="15">
                    <Label Text="Our Company" FontSize="20" FontAttributes="Bold"/>
                    <Label Text="We are committed to providing the best car rental experience with a wide selection of vehicles, competitive pricing, and excellent customer service. Our fleet includes economy, compact, mid-size, full-size, SUV, and luxury vehicles to meet all your transportation needs." 
                           TextColor="Gray" LineBreakMode="WordWrap"/>
                    
                    <Label Text="Contact Information:" FontSize="16" FontAttributes="Bold" Margin="0,10,0,0"/>
                    <StackLayout Spacing="5">
                        <Label Text="📧 Email: info@carrentals.com" TextColor="Gray"/>
                        <Label Text="📞 Phone: (555) 123-4567" TextColor="Gray"/>
                        <Label Text="📍 Address: 123 Main Street, City, State 12345" TextColor="Gray"/>
                    </StackLayout>
                </StackLayout>
            </Frame>

            <!-- Technical Information -->
            <Frame Style="{StaticResource CardFrame}">
                <StackLayout Spacing="15">
                    <Label Text="Technical Details" FontSize="20" FontAttributes="Bold"/>
                    <StackLayout Spacing="5">
                        <Label Text="Framework: Xamarin.Forms 5.0" TextColor="Gray"/>
                        <Label Text="Platform: Cross-platform (iOS, Android)" TextColor="Gray"/>
                        <Label Text="Architecture: MVVM Pattern" TextColor="Gray"/>
                        <Label Text="Version: 1.0.0" TextColor="Gray"/>
                        <Label Text="Build Date: December 2024" TextColor="Gray"/>
                    </StackLayout>
                </StackLayout>
            </Frame>

            <!-- Demo Information -->
            <Frame Style="{StaticResource CardFrame}" BackgroundColor="LightBlue">
                <StackLayout Spacing="10">
                    <Label Text="Demo Mode" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center"/>
                    <Label Text="This is a demonstration version of the Car Rentals app. All data is simulated for testing purposes. In a production environment, this would connect to real backend services and databases." 
                           TextColor="DarkBlue" LineBreakMode="WordWrap" HorizontalOptions="Center"/>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ScrollView>
</ContentPage>
